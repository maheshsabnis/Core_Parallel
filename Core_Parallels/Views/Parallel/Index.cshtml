@model ParallelViewModel

<h1>The Parallel Invoking the Data using Parallel.Invoke()</h1>

<form asp-action="Index">
    <table class="table table-bordered table-striped">
        <tbody>
            <tr>
                <td>
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Product Id</th>
                                <th>Product Name</th>
                                <th>Category Name</th>
                                <th>Manufacturer</th>
                                <th>Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model.Products)
                            {
                                <tr>
                                    <td>@product.ProductId</td>
                                    <td>@product.ProductName</td>
                                    <td>@product.CategoryName</td>
                                    <td>@product.Manufacturer</td>
                                    <td>@product.Price</td>
                                </tr>

                            }
                        </tbody>
                    </table>
                </td>
                <td></td>
                <td>
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Order Id</th>
                                <th>Customer Name</th>
                                <th>Product Name</th>
                                <th>Quantity</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model.Orders)
                            {
                                <tr>
                                    <td>@order.OrderId</td>
                                    <td>@order.CustomerName</td>
                                    <td>@order.ProductName</td>
                                    <td>@order.Quantity</td>
                                </tr>

                            }
                        </tbody>
                    </table>
                </td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <td>
                    <input type="submit" value="Get Data" class="btn btn-primary" />
                </td>
            </tr>
        </tfoot>
    </table>
</form>